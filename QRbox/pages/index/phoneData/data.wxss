.title {
  margin-top: 180rpx;
  width: 100%;
  height: 50rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  text-align: center;
  font-size: 35rpx;
  padding: 10px;
  background: #eee;
  box-shadow: #ddd 0px 2px 15px 1px;
}

.bottom-view {
  float: center;
}

.item-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.center {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  display: flex;
}

.content {
  padding: 10rpx;
  height: 100%;
  width: 90%;
  box-sizing: border-box;
}

.right {
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right text {
  color: #09a6d9;
}

.content view {
  width: 100%;
  margin-bottom: 20rpx;
}

.center-name {
  font-size: 30rpx;
}

.center-time {
  font-size: 25rpx;
  color: #999;
}
