/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 10px;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.img {
  width: 100%;
  height: 100%;
}

/*仿京东  */

.itemview {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.logoinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 46%;
  background-color: #fff;
  margin: 5px;
  justify-content: center;
  height: 200rpx;
  box-shadow: #ddd 0px 2px 15px 1px;
  border-radius: 3px;
}

.logotext {
  margin-top: 10px;
  color: #939393;
  font-size: 33rpx;
}
