.tab {
  height: 44px;
  line-height: 42px;
  background: #fff;

}
.tab-item {
  float: left;
  width: 33.333333333%;
  height: 43px;
  font-size: 14px;
  text-align: center;
}
.tab-item-active {

  color: #09a6d9;
  border-bottom: 2px solid #09a6d9;
}

/*manin1  */


.block {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.left {
  width: 20%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.left image {
  width: 50%;
  height: 50%;
}

.center {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  display: flex;
}

.content {
  padding: 10rpx;
  height: 100%;
  width: 90%;
  box-sizing: border-box;
}

.right {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.right text {
  color: #efb336;
}

.content view {
  width: 100%;
  margin-bottom: 20rpx;
}

.center-name {
  font-size: 30rpx;
}

.center-time {
  font-size: 25rpx;
  color: #999;
}
