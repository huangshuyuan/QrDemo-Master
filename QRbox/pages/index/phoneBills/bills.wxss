.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.block {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.left {
  width: 20%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.left image {
  width: 50%;
  height: 50%;
}

.center {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  display: flex;
}

.content {
  padding: 10rpx;
  height: 100%;
  width: 90%;
  box-sizing: border-box;
}

.right {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.right text {
  color: #09a6d9;
}

.content view {
  width: 100%;
  margin-bottom: 20rpx;
}

.center-name {
  font-size: 30rpx;
}

.center-time {
  font-size: 25rpx;
  color: #999;
}
