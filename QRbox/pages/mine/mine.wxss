/* pages/mine/mine.wxss */

/**index.wxss**/

.container {
  margin: 0px;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #f5f5f5;
}

.userinfo {
  margin-top: 0px;
  display: flex;
  flex-direction: row;
  background-color: #09a6d9;
}

.info {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-left: 40px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.user-motto {
  color: #fff;
}

.weui_cell {
  position: relative;
  display: flex;
  padding: 13px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
}

.weui_cell_hd {
  display: inline-block;
  width: 40rpx;
  margin-right: 5px;
}

.weui_cell_hd image {
  width: 100%;
  height: 40rpx;
  vertical-align: -2px;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 30rpx;
  color: #939393;
  margin-left: 20px;
}

.nextimg {
  position: absolute;
  top: 12px;
  right: 20px;
  width: 25px;
  height: 30px;
  line-height: 15px;
  color: #fff;
  border-radius: 50%;
  text-align: center;
}

.badge {
  position: absolute;
  top: 15px;
  right: 25px;
  width: 13px;
  height: 13px;
  line-height: 13px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
